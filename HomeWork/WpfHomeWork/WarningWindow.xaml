<Window x:Class="WpfHomeWork.WarningWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfHomeWork" d:DataContext="{d:DesignInstance Type=local:MainViewModel}"
        mc:Ignorable="d"
        Title="Предупреждение" Height="250" Width="600">
    <Grid>
        <TextBox HorizontalAlignment="Center" TextWrapping="Wrap" Text="{Binding Warningtext}"  VerticalAlignment="Center" FontSize="22" />
        
    </Grid>
</Window>
